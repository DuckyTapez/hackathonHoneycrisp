<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Communications Facility"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/BLUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countBLUP"
            app:srcCompat="@drawable/smallupvote" />


        <TextView
            android:id="@+id/BLUPcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/BL"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Basement" />

        <TextView
            android:id="@+id/BLDOWNcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <ImageButton
            android:id="@+id/BLDOWN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countBLDOWN"
            app:srcCompat="@drawable/smalldownvote" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/F1UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countF1UP"
            app:srcCompat="@drawable/smallupvote" />

        <TextView
            android:id="@+id/F1UPcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/F1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Floor 1 Lobby" />

        <TextView
            android:id="@+id/F1DOWNcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <ImageButton
            android:id="@+id/F1DOWN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countF1DOWN"
            app:srcCompat="@drawable/smalldownvote" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/F2UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
