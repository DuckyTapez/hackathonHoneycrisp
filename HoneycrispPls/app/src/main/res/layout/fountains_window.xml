            app:srcCompat="@drawable/smallupvote" />

        <TextView
            android:id="@+id/F2UPcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/F2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Floor 2 Lobby" />

        <TextView
            android:id="@+id/F2DOWNcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <ImageButton
            android:id="@+id/F2DOWN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countF2DOWN"
            app:srcCompat="@drawable/smalldownvote" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/F3UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countF3UP"
            app:srcCompat="@drawable/smallupvote" />

        <TextView
            android:id="@+id/F3UPcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/F3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Floor 3 Lobby" />

        <TextView
            android:id="@+id/F3DOWNcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <ImageButton
            android:id="@+id/F3DOWN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countF3DOWN"
            app:srcCompat="@drawable/smalldownvote" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/F4UP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countF4UP"
            app:srcCompat="@drawable/smallupvote" />

        <TextView
            android:id="@+id/F4UPcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/F4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Floor 4 Lobby" />

        <TextView
            android:id="@+id/F4DOWNcounterValue"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <ImageButton
            android:id="@+id/F4DOWN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="countF4DOWN"
            app:srcCompat="@drawable/smalldownvote" />

    </LinearLayout>


</LinearLayout>
